          {
            "group": "Tutoriais",
            "pages": [
              "bots/tutoriais/bancodados",
              {
                "group": "Sistema de Whitelist",
                "icon": "align-left",
                "pages": [
                  "bots/tutoriais/whitelist/perguntas",
